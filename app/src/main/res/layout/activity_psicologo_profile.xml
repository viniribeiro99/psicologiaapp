<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_design"
    tools:context=".Activities.Paciente.ChatProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="#3F51B5"
            android:textAlignment="center"
            app:titleTextColor="#fff"></android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="143dp"
            android:layout_height="157dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/profile"
            tools:src="@drawable/profile" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="12dp"
            android:textColor="#fff"
            android:textSize="26sp"
            tools:text="dasdasdasdawdacsadnasdbasdbashdbashbdashbdashdbashdbasdbjhasbdahsbdadadb" />

        <ImageView
            android:id="@+id/videoCall"
            android:layout_width="79dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/video" />

        <ImageView
            android:id="@+id/status"
            android:layout_width="33dp"
            android:layout_height="43dp"
            android:layout_gravity="center"
            tools:src="@drawable/whitecircle" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0288D1"
            android:text="Horários disponíveis"
            android:textSize="26sp"
            android:layout_gravity="center"
            android:textStyle="bold"/>

        <ListView
            android:id="@+id/daysAvailable"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="12dp"></ListView>
    </LinearLayout>

</ScrollView>